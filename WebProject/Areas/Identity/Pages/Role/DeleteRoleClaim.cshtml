@page
@model DeleteRoleClaimModel
@{
    var statusMessage = TempData["StatusMessage"];
    ViewData["Title"] = "Xóa claim";
    
    ViewData["ActivePage"] = AdminNavPages.Role;
}

@section Breadcrumb{
    <li class="breadcrumb-item">
        <a asp-page="./Edit" asp-area="Identity" asp-route-id="@Model.role.Id">@Model.role.Name</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        @ViewData["Title"]
    </li>

}

<div class="container d-md-flex justify-content-center">
    <div class="mt-5">
        <div class="card">
            <h5 class="card-header text-danger">
                @ViewData["title"]
            </h5>
            <form method="post">
                <div class="card-body">
                    <div class="mb-2 alert alert-danger">
                        Bạn có muốn xóa claim (@Model.input.Name) ?
                    </div>
                    @Html.HiddenFor(x => Model.input.Name)
                    @Html.HiddenFor(x => Model.input.Value)
                    <div class="mb-2">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </div>
                    <hr class="text-primary" />
                    <div class="mb-2">
                        <p>
                            <a class="link-primary" asp-route-id="@Model.role.Id" asp-area="Identity" asp-page="./Edit" a>Quay về.</a>
                        </p>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}


