@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại email xác nhận";
}

<div class="container form-manager">
    <div class="form-manager form-login box">
        <div class="alert alert-warning">
            <h1>@ViewData["Title"]</h1>
            <h2>Nhập email của bạn.</h2>
        </div>
        
        <hr />
        <div class="row">   
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-primary">
                        Gửi lại
                    </button>
                </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
