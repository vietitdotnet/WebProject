@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ Sơ";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3><i class="bi bi-person-lines-fill"></i> @ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your phone number." />
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your phone number." />
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>

             </div>
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                        <label asp-for="Username" class="form-label">Số điện thoại</label>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Address" class="form-control" />
                        <label asp-for="Input.Address" class="form-label"></label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating mb-3">

                        <input class="form-control" asp-for="Input.Company" />
                        <label asp-for="Input.Company" class="form-label"></label>
                        <span asp-validation-for="Input.Company"></span>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating mb-3">

                        <input class="form-control" asp-for="Input.BirthDate" />
                        <label asp-for="Input.BirthDate" class="form-label"></label>
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                </div>

            </div>


            <div class="form-floating mb-3">
               
                <input asp-for="Input.NativePlace" class="form-control" />
                <label asp-for="Input.NativePlace" class="form-label"></label>
                <span asp-validation-for="Input.NativePlace" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" asp-for="Input.Description" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Mô tả bản thân</label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
           
            <button id="update-profile-button" type="submit" class="w-100 btn btn-primary">Lưu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
